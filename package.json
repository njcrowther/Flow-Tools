{
  "name": "flow-tools",
  "description": "Use Flow Tools to quickly create nice looking flow posters and other documentation. Right now the only tool available is add artboard titles as text layers for export",
  "version": "1.0.1",
  "engines": {
    "sketch": ">=49.0"
  },
  "skpm": {
    "name": "Flow-Tools",
    "manifest": "src/manifest.json",
    "main": "flow-tools.sketchplugin",
    "assets": [
      "assets/**/*"
    ],
    "sketch-assets-file": "sketch-assets/icons.sketch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/njcrowther/Flow-Tools.git"
  },
  "scripts": {
    "build": "skpm-build",
    "watch": "skpm-build --watch",
    "start": "skpm-build --watch --run",
    "postinstall": "npm run build && skpm-link"
  },
  "devDependencies": {
    "@skpm/builder": "^0.7.0"
  },
  "author": "Nathan Crowther <njcrowther@gmail.com>"
}
